<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.thesis17.mytimeapp.baseTimeTable.week.TimetableWeekFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_timetable_week_buttonPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <TextView
                android:id="@+id/fragment_timetable_week_textMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <Button
                android:id="@+id/fragment_timetable_week_buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

        </LinearLayout>

        <com.sample.thesis17.mytimeapp.baseTimeTable.week.CustomWeekView
            android:id="@+id/customWeekView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <GridView
            android:id="@+id/fragment_timetable_week_GridView"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:numColumns="8"
            android:stretchMode="columnWidth" />

    </LinearLayout>
</FrameLayout>
