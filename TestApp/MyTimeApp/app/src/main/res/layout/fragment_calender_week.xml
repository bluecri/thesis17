<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/IdFragmentCalenderWeek"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.thesis17.mytimeapp.baseCalendar.week.CalenderWeekFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_fixedtimetable_menu"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_calender_week_prev_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_action_prev"
                android:layout_weight="3"
                android:text="Prev" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_calender_week_start_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/fragment_calender_week_end_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="TextView"
                    android:layout_weight="1"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <Button
                android:id="@+id/fragment_calender_week_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawableEnd="@drawable/ic_action_next"
                android:text="Next" />

            <ImageButton
                android:id="@+id/fragment_calender_week_refresh_button"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_refreash" />

        </LinearLayout>

        <com.sample.thesis17.mytimeapp.baseCalendar.week.CalenderWeekView
            android:id="@+id/calenderWeekView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            />

    </LinearLayout>

</FrameLayout>
