<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_dialog_new_marker_type"
    tools:context="com.sample.thesis17.mytimeapp.map.DialogNewMarkerTypeFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/fragment_dialog_new_marker_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="마커 타입 제목을 입력해주세요."
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:text="" />

    <EditText
        android:id="@+id/fragment_dialog_new_marker_type_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:hint="마커 타입 메모를 하세요."
        android:text="" />

    <Spinner
        android:id="@+id/fragment_dialog_new_marker_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
